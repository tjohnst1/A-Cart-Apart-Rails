if ($('.individual-review').length === 1){
  $("#delete-review-<%= @review.id %>").closest(".individual-review")
                                       .html('<div class="individual-review no-review"><p>There are no reviews for this food cart yet!</p></div>');
} else {
  $("#delete-review-<%= @review.id %>").closest(".individual-review")
                                       .velocity('slideUp', { duration:600,
                                                              easing: "easeInOutCubic",
                                                              complete: function(element){ return $(element).remove() }
                                                            });
}

$('.average_review').html(numToStars(<%= @food_cart.average_review %>));

if (<%= @food_cart.reviews.length < 1 %>){
  $('.review-num').html("No Reviews");
} else if (<%= @food_cart.reviews.length == 1 %>){
  $('.review-num').html("<%= "#{@food_cart.reviews.length} reviews" %>");
} else {
  $('.review-num').html("1 review");
}

function numToStars(num){
  var filledStars = Number(num);
  var outlineStars = 5 - filledStars;
  var starArr = [];
  for (var s = 1; s <= 5; s++){
    if (filledStars >= s){
      starArr.push('<span class="star-review-filled"></span>');
    } else {
      starArr.push('<span class="star-review-unfilled"></span>');
    }
  }
  return starArr.join('')
}
