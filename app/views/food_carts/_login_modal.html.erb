<div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="login-modal-label">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-top-third">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <p class="modal-headline">Have an account?</p>
        <div class="login-modal-form">
          <%= form_for(:user, url: user_session_path) do |f| %>
            <div class="form-group">
              <%= f.label :login, "Username or E-Mail" %>
              <%= f.text_field :login, class: "form-control", autofocus: true %>
            </div>
            <div class="form-group">
              <%= f.label :password %>
              <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
            </div>
        </div>
      </div>
      <div class="row submit-container">
        <div class="col-sm-6">
          <%= f.submit "Log in", class: "btn authentication-btn" %>
        </div>
        <div class="col-sm-6">
          <%= link_to "Need an account?", new_user_registration_path %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
